<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="DocentIMS.ActionItems" metal:use-macro="context/main_template/macros/master">
  <body>
    <metal:content-core fill-slot="content">
      <metal:block define-macro="content">

        <div id="appWrapper">


          <div tal:define="dashboard_items view/get_dashboard_info">
            <main class="appWrapper" tal:define="dashboard_items view/get_dashboard_info; 
            dashboard_list dashboard_items/dashboard-list;
            url dashboard_list/site_url">



              <!-- main app content -->
              <div class="wrapper">
                <div class="pageHeading">



                  <div class="projectPreview">
                    <div class="tab-content" id="myTabContent">


                      <!-- <div class="topInfo">
                        <h3>
                          <a href="${url}" alt="Link to site" title="Link to ${dashboard_list/short_name|None}">
                      ${dashboard_list/short_name|None} 
                          </a>
                        </h3>
                      </div> -->
                      <!-- <div class="userInfo">
                        <h4>
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                            <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                          </svg>
                          <span>${dashboard_list/user} 
                          </span>
                        </h4>

                      </div> -->
                      <div class="card mainbox">

                        <h2 class="mytitle">
                          <a href="${url}" alt="Link to site" title="Link to ${dashboard_list/short_name|None}">
                      ${dashboard_list/short_name|None} 
                          </a>
                          <span class="small">| Last updated: ${dashboard_list/last_updated|None}</span>
                        </h2>

                        <div class="card-body">
                          <div class="userInfo">
                            <h4>
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                              </svg>
                              <span>${dashboard_list/user} – ${dashboard_list/your_team_role} 
                              </span>
                            </h4>

                          </div>
                          <div class="topItemBox">
                            <div class="top">
                              <h3>Your Action Items</h3>
                            </div>
                            <div class="itemWrapper">
                              <div class="row">

                                <div tal:repeat="urgency  dashboard_list/urgency_list" class="col-xl-3 col-lg-6 col-md-6 col-12">
                                  <div tal:define="urgclass urgency/name" class="color-${python: repeat.urgency.index} singleItem ${python: urgclass.split(' ', 1)[0]}">

                                    <h4 class="black">${urgency/name}  Items</h4>
                                    <h2>${urgency/count}</h2>
                                    <div class="detailsBtn">
                                      <a href="${url}/action-items?collectionfilter=1&urgency=${urgency/name}" class="xwhite-text">
                                             More Details
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                                        </svg>
                                      </a>

                                    </div>
                                  </div>
                                </div>                                <!-- repeat-->

                              </div>
                            </div>
                          </div>

                          <div class="bottomItemBox">
                            <div class="top">
                              <h3>Meeting Dates</h3>
                            </div>
                            <div class="itemWrapper">
                              <div class="row">
                                <!-- <div class="col-xl-3 col-lg-6 col-md-6 col-12">
                                  <div class="singleItem meeting">
                                    <h4>Meetings</h4>
                                    <h2>${dashboard_list/meetings|None}</h2>
                                    <div class="detailsBtn">
                                      <a href="${url}/meeting" class="white-text">
                                          More Details
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                                        </svg>
                                      </a>
                                    </div>
                                  </div> -->
                                <!-- </div> -->
                                <div tal:repeat="meeting dashboard_list/meeting_list" class="col-xl-3 col-lg-6 col-md-6 col-12">
                                  <div class="singleItem meeting">
                                    <h4>${meeting/name}</h4>
                                    <h2>${meeting/count}</h2>
                                    <div class="detailsBtn">
                                      <a href="${url}/meeting" class="white-text">
              More Details
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                                        </svg>
                                      </a>
                                    </div>
                                  </div>
                                </div>

                              </div>
                            </div>
                          </div>



                          <div class="bottomItemBox">
                            <div class="top">
                              <h3>

                                <a href="${url}/notifications-view">
                                            Notifications (Click to show all)
                                  
                                </a>
                              </h3>
                            </div>
                            <div class="itemWrapper">
                              <div class="row">

                                <div tal:repeat="notification dashboard_list/notification_list" class="col-xl-3 col-lg-6 col-md-6 col-12">
                                  <div tal:define="name notification/name; count notification/count" class="singleItem notification ${name} count-${count}">
                                    <h4>${name}</h4>
                                    <h2>${count}</h2>
                                    <div class="detailsBtn">
                                      
                                    </div>
                                  </div>
                                </div>

                              </div>
                            </div>
                          </div>
                        </div>


                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <style>
              .card.mainbox { border: 8px solid ${dashboard_list/project_color|None} } 
              .xsingleItem { background-color: ${dashboard_list/project_color|None} } 
              .singleItem.meeting { background-color: ${dashboard_list/mark_color|None} } 
              .singleItem.notification {background-color: whitesmoke;}
              .singleItem.error {background-color: red;}
              .singleItem.warning {background-color: orange;}
              .singleItem.info {background-color: cyan;}
              h4.black {color: black !important}
              h2.mytitle {text-align: center; margin-top: 1rem;}
              .singleItem.count-0  {opacity: 0.5}
              .small { font-size: 0.4em !important; font-weight: normal; color: #DDD}
              </style>
            </main>

          </div>
        </div>

      </metal:block>
    </metal:content-core>

  </body>
</html>
