<div class="info_portlet portletWrapper" tal:condition="view/_data|none" tal:define="data view/_data">
    <div class="portlet card">
        <div  class="card-header padding-10 white" 
            style="background-color: ${python: data[0]['project_color']}">${python: data[0]['short_name']} Info</div>  
         <div class="card-body"> 
         <tal:repeat tal:repeat="portlet_content python: data[0]['portlet_content']">
            <h5 tal:content="structure python: data[0]['title']" />
            <p tal:content="structure python: data[0]['description']" />
        </tal:repeat>
        </div> 
    </div>
</div>

<style>
.white {color: white}
.padding-10 { padding: 10}
</style>